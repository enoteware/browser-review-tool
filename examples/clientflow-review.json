        {
          "type": "screenshot",
          "name": "validation-errors"
        }
      ]
    },
    {
      "name": "Fill Form with Invalid Email",
      "url": "/contact",
      "record": true,
      "actions": [
        {
          "type": "type",
          "selector": "input[name='name']",
          "text": "John Doe",
          "waitAfter": 300
        },
        {
          "type": "type",
          "selector": "input[name='email']",
