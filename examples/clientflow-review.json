          "waitAfter": 300
        },
        {
          "type": "click",
          "selector": "button[type='submit']",
          "waitAfter": 1000
        },
        {
          "type": "screenshot",
          "name": "email-validation-error"
        }
      ]
    },
    {
      "name": "Successful Form Submission",
      "url": "/contact",
      "record": true,
      "actions": [
        {
          "type": "type",
          "selector": "input[name='name']",
          "text": "John Doe",
          "waitAfter": 300
        },
        {
          "type": "type",
          "selector": "input[name='email']",
          "text": "john@example.com",
          "waitAfter": 300
        },
        {
          "type": "type",
